{
	"packageManager": "npm@10.2.4",
	"name": "monorepo-plugin",
	"version": "0.1.0",
	"description": "A starter plugin for a monorepo WordPress project",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/monorepo-editor.js",
	"scripts": {
		"build": "npm run build:wp-scripts && npm run build:idc-block-ui && npm run build:editor-styles && npm run build-blocks-manifest",
		"build:wp-scripts": "wp-scripts build --output-path=build/scripts --webpack-copy-php",
		"build-blocks-manifest": "wp-scripts build-blocks-manifest",
		"start": "concurrently 'npm run start:wp-scripts' 'npm run start:idc-block-ui' 'npm run start:editor-styles'",
		"start:wp-scripts": "wp-scripts start --output-path=build/scripts --webpack-copy-php",
		"size": "size-limit",
		"clean": "rm -rf node_modules package-lock.json build/*",
		"test": "echo \"No tests specified yet\" && exit 0"
	},
	"size-limit": [
		{
			"path": "build/scripts/block-editor.js",
			"limit": "100 KB"
		},
		{
			"path": "build/scripts/admin-scripts.js",
			"limit": "50 KB"
		},
		{
			"path": "build/styles/idc-blocks-ui.css",
			"limit": "50 KB"
		},
		{
			"path": "build/styles/editor-styles.css",
			"limit": "50 KB"
		}
	]
}