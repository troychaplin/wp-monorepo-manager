{
	"name": "wp-monorepo-manager",
	"version": "0.0.1",
	"packageManager": "npm@10.2.4",
	"private": false,
	"workspaces": [
		"wordpress/wp-content/plugins/monorepo-plugin",
		"wordpress/wp-content/themes/monorepo-theme"
	],
	"scripts": {
		"build": "turbo run build",
		"build:plugin": "turbo run build --filter=monorepo-plugin",
		"start": "turbo run start --parallel",
		"start:plugin": "turbo run start --filter=monorepo-plugin",
		"lint": "npm run lint:plugin",
		"lint:plugin": "npm run lint:plugin-js && npm run lint:plugin-css && npm run lint:plugin-php",
		"lint:plugin-css": "stylelint \"./wordpress/wp-content/plugins/monorepo-plugin/**/*.scss\"",
		"lint:plugin-php": "composer lint-plugin-php",
		"lint:plugin-js": "wp-scripts lint-js ./wordpress/wp-content/plugins/monorepo-plugin/src",
		"format": "npm run format:plugin",
		"format:plugin": "npm run format:plugin-js && npm run format:plugin-css && npm run format:plugin-php",
		"format:plugin-css": "stylelint \"./wordpress/wp-content/plugins/monorepo-plugin/**/*.scss\" --fix",
		"format:plugin-php": "composer format-plugin-php",
		"format:plugin-js": "wp-scripts lint-js ./wordpress/wp-content/plugins/monorepo-plugin/src --fix",
		"clean": "npm run clean:root && npm run clean:plugin && npm install && npm run build",
		"clean:root": "rm -rf .turbo ; rm -rf node_modules ; rm package-lock.json",
		"clean:plugin": "cd wp-content/plugins/monorepo-plugin && rm -rf .turbo node_modules build package-lock.json"
	},
	"dependencies": {
		"@wordpress/eslint-plugin": "22.11.0",
		"@wordpress/scripts": "30.18.0",
		"eslint-config-wordpress": "2.0.0",
		"postcss-import": "^16.1.0",
		"prettier": "3.5.3",
		"stylelint": "16.20.0",
		"stylelint-scss": "^6.11.1",
		"turbo": "2.5.4"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@wordpress/blocks": "^14.10.0",
		"@wordpress/data": "^10.21.0",
		"@wordpress/dom-ready": "^4.21.0",
		"@wordpress/element": "^6.21.0",
		"@wordpress/i18n": "^5.21.0",
		"@wordpress/icons": "^10.21.0",
		"@wordpress/interactivity": "^6.21.0",
		"concurrently": "^9.1.2",
		"husky": "9.1.7",
		"webpack": "^5.98.0",
		"webpack-cli": "^6.0.1"
	}
}
